<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiEx1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding index}">

    <VerticalStackLayout>
        <Button
            x:Name="btnUp"
            Clicked="btnUp_Clicked"
            FontFamily="MaterialSymbolsRounded"
            FontSize="35"
            HorizontalOptions="Center"
            Text="&#xe5d8;" />
        <Image
            x:Name="img"
            Margin="10"
            HeightRequest="150"
            Source="dotnet_bot.png" />
        <Button
            x:Name="btnDown"
            Clicked="btnDown_Clicked"
            FontFamily="MaterialSymbolsRounded"
            FontSize="35"
            HorizontalOptions="Center"
            Text="&#xe5db;" />
        <Button
            Margin="10"
            Clicked="NavigateDynamic"
            Text="Show Dynamic" />
        <Slider
            Margin="30"
            Maximum="3"
            MaximumTrackColor="#F01616"
            Minimum="0"
            MinimumTrackColor="#78EE10"
            Value="{Binding SliderIndex, Mode=TwoWay}" />
        <Button
            Margin="10"
            Clicked="SendSmsClicked"
            Text="Send SMS" />
        <Button
            Margin="10"
            Clicked="NavigateRegistration"
            Text="Registration" />
    </VerticalStackLayout>

</ContentPage>
